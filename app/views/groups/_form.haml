= form_for(@group, html: { class: 'form-horizontal'}) do |f|
  - if @group.errors.any?
    #error_explanation
      %h2= "#{pluralize(@group.errors.count, "error")} prohibited this project from being saved:"
      %ul
        - @group.errors.full_messages.each do |msg|
          %li= msg

  %div.form-group
    = f.label :name,"Name", :class => 'col-lg-2 control-label'
    %abbr{title: "required"} *
    %div.col-lg-7
      = f.text_field :name, :class => 'form-control', placeholder: "Name"
  %div.form-group
    %div.col-lg-7
      = f.collection_select(:user_ids, User.all, :id, :name, {}, { multiple: true, prompt: true, class: 'form-control'} )
  %div.form-group
    %div.col-lg-10.col-lg-offset-2
      = link_to "Back", groups_path, :class => 'btn btn-default'
      = f.button :submit, :class => 'btn btn-primary'